{
  "compilerOptions": {
    "target": "esnext", // Target modern JavaScript
    "module": "esnext", // Use ES modules
    "strict": true, // Enable all strict type-checking options
    "jsx": "preserve", // Preserve JSX as is (useful for Vue)
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"] // Setup alias if needed
    },
    "lib": ["esnext", "dom"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
